---
import FullWidth from '../layouts/FullWidth.astro';
import Tag from '../components/Tag.astro';
import { getPostsByYear, getPublishedPostsCount } from '../utils/posts';
import { PAGES } from '../constants';

const { title, description } = PAGES.archive;

// Get posts grouped by year
const postsByYear = await getPostsByYear();

// Sort years in descending order
const sortedYears = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);

// Get total post count
const totalPosts = await getPublishedPostsCount();
---

<FullWidth title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Post Archive
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Complete collection of {totalPosts} posts spanning {sortedYears.length} years
      </p>
    </div>

    <!-- Archive Content -->
    <div class="space-y-16">
      {sortedYears.map(year => (
        <div class="border-l-4 border-gray-200 dark:border-gray-700 pl-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
            {year} ({postsByYear[year].length} posts)
          </h2>
          <div class="space-y-8">
            {postsByYear[year].map(post => (
              <article class="group">
                <div class="flex items-start space-x-6">
                  <time
                    datetime={post.data.pubDate.toISOString()}
                    class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap pt-1"
                  >
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      <a href={`/posts/${post.slug}`} class="block">
                        {post.data.title}
                      </a>
                    </h3>
                    {post.data.description && (
                      <p class="mt-2 text-gray-600 dark:text-gray-300 line-clamp-2">
                        {post.data.description}
                      </p>
                    )}
                    <div class="flex items-center space-x-4 mt-4">
                      {post.data.category && (
                        <Tag tag={post.data.category} type="category" href={`/category/${post.data.category.toLowerCase()}`} />
                      )}
                      {post.data.tags && post.data.tags.length > 0 && (
                        <div class="flex items-center space-x-2">
                          {post.data.tags.slice(0, 3).map((tag: string) => (
                            <Tag tag={tag} href={`/tag/${tag.toLowerCase()}`} />
                          ))}
                          {post.data.tags.length > 3 && (
                            <span class="text-xs text-gray-500 dark:text-gray-400">
                              +{post.data.tags.length - 3} more
                            </span>
                          )}
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Empty State -->
    {totalPosts === 0 && (
      <div class="text-center py-12">
        <div class="text-gray-400 dark:text-gray-500 mb-4">
          <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
          No posts yet
        </h3>
        <p class="text-gray-500 dark:text-gray-400">
          Check back soon for new content!
        </p>
      </div>
    )}

    <!-- Back to Blog Link -->
    <div class="mt-12 text-center">
      <a
        href="/blog"
        class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
      >
        <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Blog
      </a>
    </div>
  </div>
</FullWidth>